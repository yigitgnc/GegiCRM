@section Scripts
    {
    <script>

        getNewOrdersCurrencies();
        getOrdersProducts();

        var lastSelectedType;

        function UpdateMultipleActionModal(type) {
            lastSelectedType = type;
            $(".multipleActionType").html(lastSelectedType);
            $(".selectedItemCount").html(checkedProducts.length);
            $("#multipleActionModal").modal("show");
        }

        function MoveSelected(type) {
            $(".selectedItemCount").html(checkedProducts.length);           

            $("#moveOrderProductModal").modal("show");
        }

        function SubmitMoveSelected(type) {
            $.ajax({
                "url": "/TeklifTakip/MoveSelectedOrderProducts",
                "method": "POST",
                data: {
                    ids: checkedProducts,
                    type: $("#select-MoveType").val(),
                    destinationCustomerId: $("#select-OrderToMoveId").val()
                },
                success: function(data) {
                    if (data == "OK") {
                        $("#MoveResponse").fadeIn(0).fadeOut(5000).html("İşlem Tamamlandı");
                    } else {
                        $("#MoveResponse").fadeIn(0).fadeOut(5000).html("Bir Hata Oluştu !");
                    }
                    getOrdersProducts();
                },
                error: function(err) {
                    console.log(err);
                    $("#MoveResponse").fadeIn(0).fadeOut(5000).html("Bir Hata Oluştu !");
                }
            });
        }

        function DoMultipleAction(type) {
            if (type == undefined) {
                type = lastSelectedType;
            }
            console.log(type);

            $.ajax({
                "url": "/TeklifTakip/DoMultipleAction",
                "method": "POST",
                data: {
                    ids: checkedProducts,
                    type: type
                },
                success: function(data) {
                    $("#multipleAcitonResponse").fadeIn(0).fadeOut(5000).html("İşlem Tamamlandı");
                    getOrdersProducts();
                },
                error: function(err) {
                    console.log(err);
                    $("#multipleAcitonResponse").fadeIn(0).fadeOut(5000).html("Bir Hata Oluştu !");
                }
            });

        }

        function getNewOrdersCurrencies() {
            $("#waitCurrency").show();

            $.ajax({
                "url": "/TeklifTakip/_GetOrdersCurrenciesWithEditing/@Model.Id",
                "method": "GET",
                success: function(data) {
                    $("#OrdersCurrencies").html(data);
                },
                error: function(err) {
                    console.log(err);
                    $("#OrdersCurrencies").html("Bir Hata Oluştu !");
                }
            }).done(function() {
                $("#waitCurrency").hide();
            });

        };

        function getOrdersProducts() {
            $("#waitOrdersProducts").show();

            $.ajax({
                "url": "/TeklifTakip/_GetOrdersProductsPartial/@Model.Id?type=@ViewBag.Type",
                "method": "GET",
                success: function(data) {
                    $("#ordersProducts").html(data);
                },
                error: function(err) {
                    console.log(err);
                    $("#ordersProducts").html("Bir Hata Oluştu !");
                }
            }).done(function() {
                $("#waitOrdersProducts").hide();
            });

        };

        function getAddOrdersProductPartial(orderProductId) {
            $("#newProductModal").modal("show");
            $("#waitAddOrdersProduct").show();
            $("#AddOrdersProductContent").hide();

            $.ajax({
                "url": "/TeklifTakip/_AddOrdersProductPartial?id=@Model.Id&orderProductId=" + orderProductId,
                "method": "GET",
                success: function(data) {
                    $("#AddOrdersProduct").html(data);
                },
                error: function(err) {
                    console.log(err);
                    $("#AddOrdersProduct").html("Bir Hata Oluştu !");
                }
            }).done(function() {
                $("#waitAddOrdersProduct").hide();
                $("#AddOrdersProductContent").show();
            });
        };

        function submitOrderForm(type) {
            switch (type) {
                case 1:
                    getOnayliProductsCount();
                    break;
                case 2:
                    $("#approveAll").val("1");
                    $("#orderForm").submit();
                    break;
                default:
                    $("#orderForm").submit();
            }


        }

        function getOnayliProductsCount() {
            $.ajax({
                type: "GET",
                url: "/TeklifTakip/CheckForOnayliProducts/@Model.Id",
                success: function(data) {
                    console.log(data);
                    if (data < 1) {
                        $("#confirmSaveModal").modal("show");
                        $("#onayliProductCount").html(data);
                    } else {
                        $("#orderForm").submit();
                    }
                },
                error: function(data) {
                    console.log(data);
                    alert("Bir Hata Oluştu !");
                }
            });
        }

        $("#AddOrdersProductForm").submit(function(e) {
            $("#responseMessages").html("").removeClass("text-danger");
            e.preventDefault(); // avoid to execute the actual submit of the form.

            var form = $(this);
            var actionUrl = form.attr('action');

            $.ajax({
                type: "POST",
                url: actionUrl,
                data: form.serialize(), // serializes the form's elements.
                success: function(data) {
                    if (data.includes("OK")) {
                        $("#responseMessages").addClass("text-success").html("Ürün Kalemi Eklendi");
                        getOrdersProducts();
                    } else if (data.includes("UP")) {

                        $("#responseMessages").addClass("text-info").html("Ürün Kalemi Güncellendi");
                        getOrdersProducts();
                    } else {
                        $("#responseMessages").addClass("text-danger").html(data);
                    }
                    console.log(data);
                },
                error: function(data) {
                    console.log(data);
                    $("#responseMessages").addClass("text-danger").html("Bir Hata Oluştu !");
                }
            }).done(function() {
                $("#responseMessages").fadeIn(300);
                setTimeout(function() {
                    $("#responseMessages").fadeOut(500);
                },
                    5000);
            });
        });





        function getCopy(toplamli) {
            $("#copyModal").modal("show");
            var iframe = document.getElementById("copyIframe");
            iframe.src = "/TeklifTakip/_CopyTeklif/@Model.Id?toplamli=" + toplamli;

        }


    </script>
}
