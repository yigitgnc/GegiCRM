                        <i class="bx bx-plus"></i>
                        @ViewBag.Type<text>e</text> Yeni Ürün Ekle
                    </button>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div id="waitOrdersProducts" class="spinner-border spinner-border-sm text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <div id="ordersProducts">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@*Modals*@
<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" data-bs-backdrop="static" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form class="modal-content" action="/TeklifTakip/Delete" method="post">
            <div class="modal-header">
                <h5 class="modal-title" id="backDropModalTitle">@Model.Id Id'li @ViewBag.Type<text>i</text> Silmek Üzeresin !</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col mb-3">
                        <label class="text-danger">@Model.Id Id'li @ViewBag.Type<text>i</text> Silmek İstediğine Emin Misin ?</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Hayır İptal
                </button>
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="submit" class="btn btn-danger" value="Evet Sil" />
            </div>
        </form>
    </div>
</div>

<!-- Add New Product Modal -->
<div class="modal fade" id="newProductModal" data-bs-backdrop="static" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">

        <div id="waitAddOrdersProduct">
            <div class="d-flex justify-content-center text-center">
                <div class="spinner-border spinner-border-sm text-primary " role="status" style="width: 7rem; height: 7rem;">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>

        <form id="AddOrdersProductForm" action="/TeklifTakip/AddOrdersProduct" method="post" class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">@ViewBag.Type<text>e</text> Yeni Ürün Kalemi Ekle</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="AddOrdersProduct">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Kapat
                </button>
                <input type="hidden" name="orderId" value="@Model.Id" />
                <input type="submit" class="btn btn-success" value="Kaydet" />
            </div>

        </form>
    </div>
</div>


@section Scripts
    {
    <script>

        function getNewOrdersCurrencies() {
            $("#waitCurrency").show();

            $.ajax({
                "url": "/TeklifTakip/_GetOrdersCurrenciesWithEditing/@Model.Id",
                "method": "GET",
                success: function(data) {
                    $("#OrdersCurrencies").html(data);
                },
                error: function(err) {
                    console.log(err);
                    $("#OrdersCurrencies").html("Bir Hata Oluştu !");
                }
            }).done(function() {
                $("#waitCurrency").hide();
            });

        };

        function getOrdersProducts() {
            $("#waitOrdersProducts").show();

            $.ajax({
                "url": "/TeklifTakip/_GetOrdersProductsPartial/@Model.Id",
                "method": "GET",
                success: function(data) {
                    $("#ordersProducts").html(data);
                },
                error: function(err) {
                    console.log(err);
                    $("#ordersProducts").html("Bir Hata Oluştu !");
                }
            }).done(function() {
                $("#waitOrdersProducts").hide();
            });

        };

        function getAddOrdersProductPartial() {
            $("#waitAddOrdersProduct").show();

            $.ajax({
                "url": "/TeklifTakip/_AddOrdersProductPartial/@Model.Id",
                "method": "GET",
                success: function(data) {
                    $("#AddOrdersProduct").html(data);
                },
                error: function(err) {
                    console.log(err);
                    $("#AddOrdersProduct").html("Bir Hata Oluştu !");
                }
            }).done(function() {
                $("#waitAddOrdersProduct").hide();
            });

        };

        getNewOrdersCurrencies();
        getOrdersProducts();
    </script>
}
