@using GegiCRM.Entities.Concrete
@{
    ViewData["title"] = "Teklif Takip [TT]";
}
@model List<Order>

@*<style>
    .td {
    overflow-x: auto;
    }
    </style>*@

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h5> Teklifler</h5>
            <button id="newOrderButton" type="button" class="btn btn-outline-primary" data-bs-toggle="collapse" data-bs-target="#newOrderCollapse">
                Yeni Teklif
            </button>
        </div>

        <div class="collapse mt-3" id="newOrderCollapse">
            <div class="col-12 d-flex justify-content-center">
                <div id="waitNewOrder" class="spinner-border spinner-border-lg text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
            <div id="newOrderContent" class="d-grid d-sm-flex p-3">
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap pt-2 pb-4 w-100" style="overflow-x:hidden">
            <table id="Orders" class="table table-striped table-hover col-12 w-100">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>TİCARİ ÜNVANI</th>
                        <th>TEKLİF TUTARI</th>
                        <th>TEMSİLCİ</th>
                        <th>KAYIT TARİHİ</th>
                        <th>DURUMU</th>
                        <th>TEKLİF ONAY</th>
                        <th>TEKLİF ONAY TARİHİ</th>
                        <th>SİPARİŞ ONAY</th>
                        <th>SİPARİŞ ONAY TARİHİ</th>
                        <th>İŞLEM</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (Order item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Customer.Name</td>
                            <td>@item.OrdersProducts.Sum(x=>x.Adet*x.BirimFiyat)</td>
                            <td>
                                <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                    <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top" class="avatar avatar-xs pull-up" title="Kaydeden: @item.AddedByNavigation.NameSurname">
                                        <img src="/assets/img/avatars/1.png" alt="Kaydeden: @item.AddedByNavigation.NameSurname" class="rounded-circle" />
                                    </li>

                                    <li style="display: none">
                                        <i> Kaydeden @item.AddedByNavigation.NameSurname</i>
                                    </li>

                                    <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top" class="avatar avatar-xs pull-up" title="Temsilci: @item.AddedByNavigation.NameSurname">
                                        <img src="/assets/img/avatars/1.png" alt="Temsilci: @item.RepresentetiveUser.NameSurname" class="rounded-circle" />
                                    </li>

                                    <li style="display: none">
                                        <i> Temsilci @item.RepresentetiveUser.NameSurname</i>
                                    </li>
                                </ul>
                            </td>
                            <td>@item.CreatedDate</td>
                            <td>@item.OrderState.Name</td>
                            <td>
                                @*@item.IsOfferApproved*@
                                @Html.Raw(item.CreateHtmlBadge(item.IsOfferApproved))
                            </td>
                            <td>@item.TeklifOnayFormatted</td>
                            <td>
                                @*@item.IsOrderApproved*@
                                @Html.Raw(item.CreateHtmlBadge(item.IsOrderApproved))
                            </td>
                            <td>@item.SiparisOnayFormatted</td>

                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i>Düzenle</a>
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i>Sil</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }


                </tbody>
                <tfoot class="table-border-bottom-0">
                </tfoot>
            </table>
        </div>
    </div>
</div>


<hr class="my-5" />





@section Scripts{

    <script>
        var firstTime = true;
        $("#newOrderButton").click(function() {

            if (firstTime) {
                getNewOrderPage();
                firstTime = false;
            }
        });

        function getNewOrderPage() {
            $("#waitNewOrder").show();

            $.ajax({
                "url": "/TeklifTakip/_NewOrderContentPartial",
                "method": "GET",
                success: function(data) {
                    $("#newOrderContent").html(data);
                },
                error: function(err) {
                    console.log(err);
                    $("#newOrderContent").html("Bir Hata Oluştu !");
                }
            }).done(function() {
                $("#waitNewOrder").hide();
            });

        };
    </script>
}
