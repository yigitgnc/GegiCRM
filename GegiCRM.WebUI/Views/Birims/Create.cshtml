@model GegiCRM.Entities.Concrete.Birim

@{
    ViewData["Title"] = "Birim Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Birim Oluştur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Birim Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Short" class="control-label">Birim Kısaltması</label>
                <input asp-for="Short" class="form-control" />
                <span asp-validation-for="Short" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> Silinsin mi ?
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AddedById" class="control-label">Kaydeden</label>
                <select asp-for="AddedById" class ="form-control" asp-items="ViewBag.AddedById"></select>
            </div>
            <div class="form-group">
                <label asp-for="ModifiedById" class="control-label">Son Düzenleyen</label>
                <select asp-for="ModifiedById" class ="form-control" asp-items="ViewBag.ModifiedById"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
