@model GegiCRM.Entities.Concrete.Customer

@{
    ViewData["Title"] = "Yeni Müşteri Kaydet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Yeni Müşteri Kaydet</h4>
<hr />
<div class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-12">
        <form asp-action="Create">
            <div class="form-group  d-none">
                <label asp-for="TercihEdilenKur" class="control-label"></label>
                <input asp-for="TercihEdilenKur" class="form-control" />
                <span asp-validation-for="TercihEdilenKur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicariUnvan" class="control-label">Ticari Ünvan</label>
                <input asp-for="TicariUnvan" class="form-control" />
                <span asp-validation-for="TicariUnvan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Ad</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Soyad</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SectorId" class="control-label">Sektör</label>
                <select asp-for="SectorId" class="form-control" asp-items="ViewBag.SectorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CariKodu" class="control-label">Cari Kodu</label>
                <input asp-for="CariKodu" class="form-control" />
                <span asp-validation-for="CariKodu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SegmentId" class="control-label">Segment</label>
                <select asp-for="SegmentId" class="form-control" asp-items="ViewBag.SegmentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TypeId" class="control-label">Tür</label>
                <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Tel" class="control-label"></label>
                <input asp-for="Tel" class="form-control" />
                <span asp-validation-for="Tel" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="CurrencyId" class="control-label"></label>
                <input asp-for="CurrencyId" class="form-control" />
                <span asp-validation-for="CurrencyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SideSuppliers" class="control-label">Yan Tedarikçiler</label>
                <input asp-for="SideSuppliers" class="form-control" />
                <span asp-validation-for="SideSuppliers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label">Müşteri Notu</label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PreferredCurrencyId" class="control-label">Tercih Edilen Kur</label>
                <select asp-for="PreferredCurrencyId" class="form-control" asp-items="ViewBag.PreferredCurrencyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CustomerMainCompanyId" class="control-label">Ana Müşteri</label>
                <select asp-for="CustomerMainCompanyId" class="form-control" asp-items="ViewBag.CustomerMainCompanyId"></select>
            </div>
            <div class="form-group  d-none">
                <label asp-for="AddedById" class="control-label"></label>
                <select asp-for="AddedById" class="form-control" asp-items="ViewBag.AddedById"></select>
            </div>
            <div class="form-group  d-none">
                <label asp-for="ModifiedById" class="control-labe d-none"></label>
                <select asp-for="ModifiedById" class="form-control" asp-items="ViewBag.ModifiedById"></select>
            </div>
            <div class="form-group form-check d-none">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
